
    <div class="row">
            <div class="col s12 l9">
                <div class="container">
                    <div class="row">
                        <div class="card">
                            <div class="card-content container">
                                <span class="card-title center">Registrar Donador</span>
                                <div class="row">
                                    <form class="col s12" id="signin-form" method="POST" action="/donor/saveDonor">
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="name-field" name="name" type="text" required />
                                                <label for="name-field">Nombre</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="lastname-field" name="lastname" type="text" required />
                                                <label for="lastname-field">Primer Apellido</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="secondlastname-field" name="secondlastname" type="text" required />
                                                <label for="secondlastname-field">Segundo Apellido</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="email-field" name="email" type="email" required />
                                                <label for="email-field">Correo Electrónico</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="borndate-field" name="borndate" type="date" class="datepicker" required />
                                                <label for="borndate-field">Fecha de Nacimiento</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="phonenumber-field" name="phonenumber" type="tel" placeholder="8888-8888" required />
                                                <label for="phonenumber-field">Teléfono</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="weight-field" name="weight" type="number" step=".01" required />
                                                <label for="weight-field">Peso</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <input id="height-field" name="height" type="number" step=".01" required />
                                                <label for="height-field">Altura</label>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="input-field col s12">
                                                <label>Género</label>
                                                <br />  <br />
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="male" name="gender" type="radio" value="male" checked />
                                                        <span>Masculino</span>
                                                    </label>
                                                </p>
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="female" name="gender" type="radio" value="female" checked />
                                                        <span>Femenino</span>
                                                    </label>
                                                </p>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="input-field col s12">
                                                <label for="bloodtype-field">Seleccione tipo de sangre</label>
                                                <br /><br />
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="AP" name="bloodtype" type="radio" value="AP" required checked />
                                                        <span>A+</span>
                                                    </label>
                                                </p>
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="BP" name="bloodtype" type="radio" value="BP" required checked />
                                                        <span>B+</span>
                                                    </label>
                                                </p>
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="OP" name="bloodtype" type="radio" value="OP" required checked />
                                                        <span>O+</span>
                                                    </label>
                                                </p>
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="ABP" name="bloodtype" type="radio" value="ABP" required checked />
                                                        <span>AB+</span>
                                                    </label>
                                                </p>
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="AN" name="bloodtype" type="radio" value="AN" required checked />
                                                        <span>A-</span>
                                                    </label>
                                                </p>
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="BN" name="bloodtype" type="radio" value="BN" required checked />
                                                        <span>B-</span>
                                                    </label>
                                                </p>
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="ON" name="bloodtype" type="radio" value="ON" required checked />
                                                        <span>O-</span>
                                                    </label>
                                                </p>
                                                <p>
                                                    <label>
                                                        <input class="with-gap" id="ABN" name="bloodtype" type="radio" value="ABN" required checked />
                                                        <span>AB-</span>
                                                    </label>
                                                </p>

                                                <div class="input-field col s12 white-text">
                                                    <input id="submit" type="submit" hidden />
                                                    <a id="submit-btn" class="waves-effect waves-light btn teal accent-3" href="javascript:void(0)">
                                                        <label class="white-text" for="submit">Registrar Donador</label>
                                                    </a>
                                                </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  

        @section JavaScript{
            <script type="module" src="~/public/javascript/views/donor/register.js"></script>
        }
