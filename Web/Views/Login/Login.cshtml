<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Inicio Sesión</title>
    <link rel="stylesheet" type="text/css" href="~/Public/CSS/login.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
		$(document).ready(function(){
			$(".iniciarSesion-form").hide();
			$(".iniciarSesion").css("background","none");

			$(".iniciarSesion").click(function(){
				$(".registrarse-form").hide();
				$(".iniciarSesion-form").show();
				$(".registrarse").css("background","none")
				$(".iniciarSesion").css("background","#fff");
			});

			$(".registrarse").click(function(){
				$(".registrarse-form").show();
				$(".iniciarSesion-form").hide();
				$(".registrarse").css("background","#fff")
				$(".iniciarSesion").css("background","none");
			});

			$(".btn").click(function(){
				$(".input").val("");
			});
		});
    </script>
</head>
<body>
    <div class="container">
        <div class="registrarse">Registrarse</div>
        <div class="iniciarSesion">Iniciar Sesión</div>

        <div class="registrarse-form">
            <input type="text" placeholder="Correo Electrónico" class="input"><br>
            <input type="text" placeholder="Nombre" class="input"><br>
            <input type="text" placeholder="Apellidos" class="input"><br>
            <input type="date" placeholder="Fecha de Nacimiento" class="input"><br>
            <input type="tel" placeholder="Telefono" class="input"><br>
            <input type="text" placeholder="Tipo de Sangre" class="input"><br>
            <input type="password" placeholder="Contraseña" class="input"><br>
            <div class="btn">Crear Usuario</div>
        </div>

        <div class="iniciarSesion-form">
            <input type="text" placeholder="Email" class="input"><br>
            <input type="password" placeholder="Contraseña" class="input"><br>
            <div class="btn">Iniciar Sesión</div>
        </div>
    </div>
</body>
</html>
